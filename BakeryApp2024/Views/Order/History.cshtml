@model IEnumerable<OrderViewModel>
@{
    ViewBag.Title = "Order History";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    @if (Model.Count() == 0)
    {
        <h2 class="text-center">No orders yet!</h2>
    }

    @foreach (var order in Model)
    {
        <partial name="_OrderPartial" model="@order" />
    }
</div>