@model IEnumerable<BakerChipModel>

@{
	ViewBag.Title = "Contacts";
}
<h2 class="text-center" style="padding-top: 20px">@ViewData["Title"]</h2>
<hr />



<div style="align-items: center; text-align: center;">
	<h3>Our bakery team</h3>
	<p>For custom orders you can contact our bakers here!</p>
</div>

<div class="row d-flex justify-content-center">
	@foreach (var baker in Model)
	{
		<partial name="_BakerPartial" model="@baker" />
	}
</div>

<h3 style="text-align:center; padding-bottom: 10px; font-weight: 600;">Location</h3>
<!DOCTYPE html>
<html>
<head>
	<style>
		#map {
			height: 500px;
			width: 100%;
		}
	</style>
</head>
<body>

	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBtOmz5Z-6krGPifwh8jBKs0YUXsmro6LU"></script>

	<div id="map"></div>
	<script>
		function initMap() {
			var coordinates = { lat: 42.689192988795014, lng: 23.318452722169145 };

			var map = new google.maps.Map(document.getElementById('map'), {
				center: coordinates,
				zoom: 12
			});

			var marker = new google.maps.Marker({
				position: coordinates,
				map: map,
				title: 'Your Location'
			});
		}
	</script>

	<script async defer
			src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBtOmz5Z-6krGPifwh8jBKs0YUXsmro6LU&callback=initMap">
	</script>

</body>
</html>

